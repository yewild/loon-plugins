#!name=美团去广告
#!desc=屏蔽美团常见广告与追踪，包括开屏广告、外卖广告、统计上报
#!author=ChatGPT
#!date=2025-08-17

[Rule]
# 广告域名
DOMAIN-SUFFIX,ad.meituan.com,REJECT
DOMAIN-SUFFIX,waimaiad.meituan.com,REJECT
DOMAIN-SUFFIX,analytics.meituan.com,REJECT
DOMAIN-SUFFIX,track.meituan.com,REJECT
DOMAIN-KEYWORD,ad.meituan,REJECT
DOMAIN-KEYWORD,analytics.meituan,REJECT

[Rewrite]
# ===== 开屏广告 =====
^https?:\/\/wmapi\.meituan\.com\/api\/v\d\/startpicture - reject
^https?:\/\/api\.meituan\.com\/api\/v\d\/startpicture - reject
^https?:\/\/apimobile\.meituan\.com\/appupdate\/startpicture - reject
^https?:\/\/img\.meituan\.net\/adunion\/.*splash - reject
^https?:\/\/p\d\.meituan\.net\/(bizad|wmbizad)\/.*splash - reject

# ===== 首页 / 外卖广告 =====
^https?:\/\/wmapi\.meituan\.com\/ad\/ - reject
^https?:\/\/api\.meituan\.com\/ad\/ - reject
^https?:\/\/apimobile\.meituan\.com\/.*\/ad\/ - reject
^https?:\/\/img\.meituan\.net\/.*\/ad\/ - reject

# ===== 数据埋点 / 追踪上报 =====
^https?:\/\/track\.meituan\.com\/ - reject
^https?:\/\/analytics\.meituan\.com\/ - reject
